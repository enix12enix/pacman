<div>
  <div class="user_new">
  	<h2>Forgot your password?</h2>
  	
  	 <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= devise_error_messages! %>
        
        <table>
          <tbody>
          	<tr>
          	  <td>
          	    <%= f.label :email, "Your Email" %>
          	  </td>
          	  <td>
          	    <%= f.email_field :email, :style => "width: 260px"%>
          	  </td>
          	</tr>
          	<tr/>
            <tr>
              <td/>
          	  <td class="action">
          	    <%= f.submit "Send me reset password instruction" %>
          	  </td>
          	</tr>
          </tbody>
        </table>

        


        <ul id="devise_links">
          <%= render "links" %>
        </ul>
      <% end %>


  </div>
 
</div>