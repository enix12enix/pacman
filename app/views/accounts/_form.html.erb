<%= form_for @account do |f| %>
	  <fieldset>
	  	<table>
	  	  <tbody>
	  	  	<tr>
	  	  	  <td><%= f.label :username %></td>
	  	  	  <td><%= f.text_field :username, :class => "text ui-widget-content ui-corner-all" %></td>
	  	  	</tr>
	  	  	<tr>
	  	  	  <td><%= f.label :password %></td>
	  	  	  <td><%= f.text_field :password, :class => "text ui-widget-content ui-corner-all" %></td>
	  	    </tr>
	  	    <tr>
	  	  	  <td><%= f.label :environment %></td>
	  	  	  <%- unless @account.environment.nil? -%>
	  	  	  <td><%= f.collection_select :environment, Environment.all, :id, :name, :selected => @account.environment.id, :class => "text ui-widget-content ui-corner-all" %></td>
	  	  	  <%- else -%>
	  	  	  <td><%= f.collection_select :environment, Environment.all, :id, :name, :class => "text ui-widget-content ui-corner-all" %></td>
	  	  	  <%- end -%>
	  	    </tr>
	  	    <tr>
	  	  	  <td><%= f.label :accounttype %></td>
	  	  	  <%- unless @account.accounttype.nil? -%>
	  	  	  <td><%= f.collection_select :accounttype, Accounttype.all, :id, :name, :selected => @account.accounttype.id, :class => "text ui-widget-content ui-corner-all" %></td>
	  	  	  <%- else -%>
	  	  	  <td><%= f.collection_select :accounttype, Accounttype.all, :id, :name, :class => "text ui-widget-content ui-corner-all" %></td>
	  	  	  <%- end -%>
	  	    </tr>
	  	    <tr>
	  	  	  <td><%= f.label :active %></td>
	  	  	  <td><%= f.check_box :active, :class => "text ui-widget-content ui-corner-all" %></td>
	  	    </tr>
	  	  </tbody>	
	  	</table>  
	 </fieldset>
<% end %>